<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">?attr/colorOnPrimary</item>
    </style>

    <style name="TextTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TextSubtitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
    </style>
</resources>